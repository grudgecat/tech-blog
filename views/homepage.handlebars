{{#each posts as |post|}}
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content white-text">
          <div class='blogTitle'><span class="card-title">{{postTitle}}</span><span class="card-title">{{ format_date createdAt}}</span></div>
          <p>{{postText}}</p>
        </div>
        <div class="card-action">
          <h6>Comments</h6>
           {{#each comments}} 
           <div>
              <p>    {{ comment_text }}  </p>
              <a class='deletecomment' data-id = {{id}}>Delete Comment</a>
           </div>
           {{/each}}
        </div>
        <div class="card-action">
          <a href='/comment/{{id}}'>Add a Comment</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}

<script src="/js/homepage.js"></script>